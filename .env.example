# Discord Application Settings
# Получите эти данные в Discord Developer Portal
# https://discord.com/developers/applications

DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Callback URL для OAuth
DISCORD_CALLBACK_URL=http://localhost:5000/auth/discord/callback

# JWT и Session секретные ключи
# Генерируйте случайные строки для продакшна!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
SESSION_SECRET=your-super-secret-session-key-change-in-production-min-32-chars

# URLs
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000

# Database (автоматически настраивается Docker Compose)
MONGODB_URI=mongodb://admin:password123@mongo:27017/discord-dashboard?authSource=admin

# Development/Production режим
NODE_ENV=development

# Порты (опционально, по умолчанию используются стандартные)
# BACKEND_PORT=5000
# FRONTEND_PORT=3000
# MONGO_PORT=27017